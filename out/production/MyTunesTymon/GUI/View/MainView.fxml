<AnchorPane prefHeight="462.0" prefWidth="781.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.Controller.MainController">
   <children>
      <Slider fx:id="volumeSlider" layoutX="613.0" layoutY="30.0" max="200.0" prefHeight="14.0" prefWidth="118.0" value="100.0" />
      <Button fx:id="playbtn" alignment="CENTER" layoutX="468.0" layoutY="15.0" mnemonicParsing="false" onAction="#playPauseMusicHandler" prefHeight="45.0" prefWidth="43.0" />
      <Button fx:id="nextbtn" alignment="CENTER" layoutX="517.0" layoutY="22.0" mnemonicParsing="false" onAction="#playNextSong" prefHeight="34.0" prefWidth="43.0" />
      <Button fx:id="prevbtn" alignment="CENTER" layoutX="419.0" layoutY="22.0" mnemonicParsing="false" onAction="#playPrevSong" prefHeight="34.0" prefWidth="43.0" />
      <VBox layoutX="14.0" layoutY="68.0" prefHeight="394.0" prefWidth="127.0">
         <children>
            <Button mnemonicParsing="false" prefHeight="26.0" prefWidth="132.0" text="Songs">
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin></Button>
            <Button mnemonicParsing="false" prefHeight="26.0" prefWidth="132.0" text="Playlists" />
         </children>
      </VBox>
      <HBox alignment="CENTER_LEFT" layoutX="152.0" layoutY="414.0" prefHeight="26.0" prefWidth="607.0">
         <children>
            <Button mnemonicParsing="false" onAction="#addSong" prefHeight="26.0" prefWidth="80.0" text="add">
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin>
            </Button>
            <Button mnemonicParsing="false" onAction="#editSongHandler" prefHeight="26.0" prefWidth="80.0" text="edit">
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin>
            </Button>
            <Button mnemonicParsing="false" onAction="#deleteSongHandler" prefHeight="26.0" prefWidth="80.0" text="delete" />
            <HBox alignment="CENTER_RIGHT" prefHeight="26.0" prefWidth="347.0">
               <children>
                  <TextField fx:id="filtertxt" prefHeight="25.0" prefWidth="118.0" promptText="Filter...">
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </TextField>
                  <Button mnemonicParsing="false" onAction="#filterTableHandler" text="Filter">
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin></Button>
                  <Button mnemonicParsing="false" onAction="#resetFilter" text="Reset" />
               </children>
            </HBox>
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
      </HBox>
      <Label fx:id="playinglbl" alignment="CENTER" layoutX="187.0" layoutY="9.0" prefHeight="17.0" prefWidth="174.0" text="Nothing is playing" />
      <TableView fx:id="songtable" layoutX="152.0" layoutY="68.0" prefHeight="327.0" prefWidth="607.0">
        <columns>
          <TableColumn fx:id="titleColumn" prefWidth="199.0" text="Title" />
          <TableColumn fx:id="artistColumn" prefWidth="164.0" text="Artist" />
            <TableColumn fx:id="categoryColumn" minWidth="0.0" prefWidth="116.0" text="Category" />
            <TableColumn fx:id="timeColumn" prefWidth="127.0" text="Time" />
        </columns>
      </TableView>
      <Slider fx:id="progressslider" layoutX="161.0" layoutY="37.0" max="200.0" prefHeight="14.0" prefWidth="227.0" />
   </children>
</AnchorPane>
